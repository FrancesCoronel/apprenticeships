{{- $index := slice -}}
{{- range $page := $.Site.RegularPages -}}
  {{- if isset .Params "company" -}}
    {{- $index = $index | append (dict "objectID" $page.File.UniqueID "company" .Date.UTC.Unix "description" .Description "company" $page.Params.company "location" $page.Params.location "link" $page.Params.Link "image" $page.Params.image) -}}
  {{- end -}}
{{- end -}}
{{- $index | jsonify -}}